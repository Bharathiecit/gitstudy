<!DOCTYPE html>
<html ng-app="leaveApp">
<!--
  Created using localhost:3000
  Source can be edited via http://localhost:3000/wal/1/edit
-->
<head>
  <base href="http://localhost/Bharathi/basicrouting.html" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.min.js"></script>

  <meta charset="utf-8">
  <title>Simple Routing</title>

<style id="jsbin-css">

</style>
</head>
<body>
<div ng-controller="EmployeeController">
  <p>{{name}}</p>
  <p my-dir></p>
  <a href="#login">Login</a>
  <a href="#register">Register</a>
  <p ng-view></p>
  <my-dir></my-dir>
  </div>
<script>
app = angular.module('leaveApp',['ngRoute']);

app.directive('myDir',function(){
              return {
                'templateUrl':"controller.js"
              };           
              });

app.config(['$routeProvider',function($routeProvider){
 
  
  $routeProvider.when('/login',{
    templateUrl : "login.html",
    controller:'EmployeeController'
  })
  .when('/register',{
    templateUrl : "register.html",
    controller:'EmployeeController'
  })
  .otherwise({
    redirectTo:'/'
  });
}]);

 

app.controller('EmployeeController',function($scope ){

$scope.studname = 'Siva';



 
  
  


});
</script>
</body>
</html>
